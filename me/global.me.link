.\" .sh adds entries to contents.
.\" If new section, bold.
.am sh
.  (x
.    ie (\\n($2 == 0) \{\
.      sp
\fB\\n($1  \\$2\fR
.\}
.    el \\n($1.\\n($2  \\$2
.  )x
..
.\" labelling: start at 0, inc by 1
.nr label_no 0 1
.de l
.  ds \\$1 (\\n+[label_no])
..
.
.de cw
\\$3\fC\\$1\f[PR]\\$2
..
.de b
\\$3\f[B]\\$1\f[P]\\$2
..
.de i
\\$3\f[I]\\$1\f[P]\\$2
..
.de bi
\\$3\f[BI]\\$1\f[P]\\$2
..
